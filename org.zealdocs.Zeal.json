{
    "id": "org.zealdocs.Zeal",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-23.08",
    "command": "zeal",
    "rename-appdata-file": "org.zealdocs.zeal.appdata.xml",
    "rename-desktop-file": "org.zealdocs.zeal.desktop",
    "rename-icon": "zeal",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "modules": [
        {
            "name": "zeal",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DZEAL_RELEASE_BUILD=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/zealdocs/zeal.git",
                    "commit": "7f938cf4e87b22abc5efd4155b78ea8127eefc4b",
                    "tag": "v0.7.1",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/capitalize-app-id.patch"
                }
            ]
        }
    ]
}
